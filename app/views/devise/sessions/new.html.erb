<% content_for :script_bottom do %>
  <script type="text/javascript">
    $(document).ready(function() {
      $(':checkbox').radiocheck();
    });
  </script>
<% end %>

<div class="container centered">
  <h2>Log in</h2>
  <div class="form-centered">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'someone@somewhere.com', autofocus: true , class: 'form-control text-center' %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" , class: 'form-control text-center' %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="form-group text-left">
          <label>
            <div class="checkbox">
              <%= f.check_box :remember_me %> <span id='checkbox-label'>Remember me</span>
            </div>
          </label>
        </div>
      <% end -%>
      <div class='form-group'>
        <%= f.submit "Log in" , class: 'btn btn-primary btn-wide' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
