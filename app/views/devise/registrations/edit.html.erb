<div class="container centered">
  <h2>Edit your profile</h2>
  <%= devise_error_messages! %>
  <div class="form-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true , class: 'form-control text-center' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "off" , class: 'form-control text-center' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control text-center' %>
      </div>
      <div class="form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "off" , class: 'form-control text-center' %>
      </div>
      <div class="actions">
        <%= f.submit "Update" , class: 'btn btn-primary btn-wide' %>
      </div>
    <% end %>

    <div class="danger-zone">
      <h5>Danger Zone</h5>

      <p>
        Are you really leaving ? :(
      </p>
      
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: 'btn btn-danger btn-wide'%>
    </div>

  </div>
</div>
